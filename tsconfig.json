{
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "composite": true,
        "types": ["@types/node", "@nuxt/schema"]
    },
    "include": [
        "nuxt.config.ts",
        "app.vue",
        "pages/**/*.vue",
        "components/**/*.vue",
        "types/**/*.d.ts",
        ".nuxt/**/*.ts"
    ]
}
